<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/SlabLauncher.SearchResult.InstantAnswer.Card">
    <io.posidon.android.slablauncher.ui.view.SeeThroughView
        android:id="@+id/blur_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.18"/>
    <RelativeLayout
        style="@style/SlabLauncher.SearchResult.InstantAnswer.Container"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_card_border">
        <TextView
            style="@style/SlabLauncher.SearchResult.SimpleBox.Text"
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>