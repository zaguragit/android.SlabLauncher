<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/SlabLauncher.SearchResult.InstantAnswer.Card">
    <io.posidon.android.slablauncher.util.view.SeeThroughView
        android:id="@+id/blur_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.18"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/feed_card_padding"
        style="@style/SlabLauncher.SearchResult.Container">
        <TextView
            style="@style/SlabLauncher.SearchResult.InstantAnswer.Title"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/SlabLauncher.SearchResult.InstantAnswer.Description"
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:ellipsize="end"/>

        <androidx.recyclerview.widget.RecyclerView
            style="@style/SlabLauncher.SearchResult.InstantAnswer.Infobox.List"
            android:id="@+id/info_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SlabLauncher.SearchResult.InstantAnswer.Actions.Container"
            android:id="@+id/actions_container">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/SlabLauncher.SearchResult.InstantAnswer.ActionText"
                        android:id="@+id/source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>
                    <View
                        android:id="@+id/separator"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        style="@style/SlabLauncher.SearchResult.InstantAnswer.ActionText"
                        android:id="@+id/search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/search_in_duckduckgo"/>
                </LinearLayout>
            </HorizontalScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>